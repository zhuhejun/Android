<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/view1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/grey_background"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"

    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tuserHead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1"

        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:id="@+id/iv_tuserHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_user_photo"

            />




    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/tv_tUserName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="tname"
        android:textSize="18sp"
        android:layout_marginStart="10dp"

        app:layout_constraintStart_toEndOf="@+id/cv_tuserHead"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <TextView
        android:id="@+id/tv_messageNum"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:text="2"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/red_background6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533"
        android:visibility="visible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>